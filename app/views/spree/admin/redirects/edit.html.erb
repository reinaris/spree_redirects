<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t("back"), admin_redirects_path, :icon => 'arrow-left', :id => 'new_redirect_link' %></li>
<% end %>

<% content_for :page_title do %>
   <h1>Edit Redirect</h1>
<% end %>

<%= render 'spree/shared/error_messages', :target => @redirect %>

<%= form_for([:admin, @redirect]) do |f| %>
  <%= render "form", :form => f %>
  <p class="form-buttons">
    <%= button t("update") %> <%= t('or') %> <%= link_to t('cancel'), collection_url %>
  </p>
<% end %>
